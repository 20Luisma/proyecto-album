{
    "name": "clean-marvel/album",
    "description": "Clean Marvel Album - Clean Architecture PHP 8.2 app with API and UI.",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Src\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8080 -t public",
        "test": "vendor/bin/phpunit --no-coverage",
        "test:cov": "phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
